{
  "name": "tpay/prestashop",
  "description": "Prestashop payment module",
  "type": "prestashop-module",
  "license": "MIT",
  "authors": [
    {
      "name": "tpay.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Tpay\\": "src/"
    },
    "classmap": [
      "tpay.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "prepend-autoloader": false,
    "optimize-autoloader": true
  },
  "require": {
    "php": ">=7.1",
    "tpay-com/tpay-openapi-php": "1.3.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.8",
    "squizlabs/php_codesniffer": "^3.7.1",
    "phpmd/phpmd": "@stable",
    "phpunit/phpunit": "^8",
    "mockery/mockery": "^1.2",
    "prestashop/php-dev-tools": "^4.2"
  },
  "scripts": {
    "build:prod": "composer install -v --no-dev",
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "@php -d date.timezone=UTC ./vendor/bin/phpunit -c tests/php/phpunit.xml"
    ],
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --color=always --coverage-html=\"build\""
    ]
  }
}
