{
  "name": "tpay/prestashop",
  "description": "Prestashop payment module",
  "license": "MIT",
  "type": "prestashop-module",
  "authors": [
    {
      "name": "tpay.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "ext-xml": "*",
    "psr/simple-cache": "^1",
    "tpay-com/tpay-openapi-php": "^2"
  },
  "require-dev": {
    "mockery/mockery": "^1.2",
    "phpmd/phpmd": "@stable",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^8",
    "prestashop/php-dev-tools": "^4.2",
    "squizlabs/php_codesniffer": "^3.13",
    "ergebnis/composer-normalize": "^2.35",
    "kubawerlos/php-cs-fixer-custom-fixers": "^3.16.2",
    "php-cs-fixer/shim": "^3.91",
    "tpay-com/coding-standards": "^1.1",
    "vimeo/psalm": "^4.30"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Tpay\\": "src/"
    },
    "classmap": [
      "tpay.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "prepend-autoloader": false,
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "kubawerlos/composer-smaller-lock": true
    }
  },
  "scripts": {
    "build:prod": "composer install -v --no-dev",
    "test": [
      "@putenv XDEBUG_MODE=coverage",
      "@php -d date.timezone=UTC ./vendor/bin/phpunit -c tests/php/phpunit.xml"
    ],
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --color=always --coverage-html=\"build\""
    ],
    "cs:fixer": "./vendor/bin/php-cs-fixer fix -vvv --diff",
    "cs:phpstan": "./vendor/bin/phpstan",
    "cs:psalm": "./vendor/bin/psalm",
    "cs:sniffer": "./vendor/bin/phpcs --standard=.php-cs.xml -n"
  }
}
