{
    "name": "tpay/prestashop",
    "description": "Prestashop payment module",
    "license": "MIT",
    "type": "prestashop-module",
    "authors": [
        {
            "name": "tpay.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-xml": "*",
        "psr/simple-cache": "^1",
        "tpay-com/tpay-openapi-php": "^2"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.35",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.16.2",
        "mockery/mockery": "^1.2",
        "php-cs-fixer/shim": "^3.23",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^1.10.30",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "*",
        "stancer/php-stubs-prestashop": "^8.2",
        "tpay-com/coding-standards": "^1.0.1",
        "vimeo/psalm": "^4.30"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Tpay\\": "src/"
        },
        "classmap": [
            "tpay.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": false
    },
    "scripts": {
        "build:prod": "composer install -v --no-dev",
        "cs:fixer": "./vendor/bin/php-cs-fixer fix -vvv --diff",
        "cs:phpstan": "_PS_ROOT_DIR_=src ./vendor/bin/phpstan",
        "cs:psalm": "./vendor/bin/psalm",
        "cs:sniffer": "./vendor/bin/phpcs --standard=.php-cs.xml -n",
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "@php -d date.timezone=UTC ./vendor/bin/phpunit -c tests/php/phpunit.xml"
        ],
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --color=always --coverage-html=\"build\""
        ]
    }
}
